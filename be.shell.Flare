[BE::Desk]
BlurRadius=100
Corners=111
IconPos=
IconSize=64
ShowIcons=false
Tint=invalid
TrashCan=false
TrashSize=64
TrashX=249
TrashY=102
Wallpaper=/home/nemo/immagini/sfondi/minimal/wallhaven-126454.jpg
WallpaperAlign=132
WallpaperAspect=-1
WallpaperMode=7

[BE::Shell]
Panels=BottomPanel,TopPanel,Uberbar
Theme=Flare

[BottomPanel]
Applets=tasks,Stretch,Clock
CastShadow=false
Frozen=false
Id=BottomPanel
Layer=0
Length=100
Offset=0
Position=1
Screen=-1
Size=30
Struts=true
Visible=true

[Clock]
Pattern='<html>'ddd hh:mm ap'</html>'
Type=Clock

[TopPanel]
Applets=GlobalMenu,Stretch,mpc,mail,upico,mediatray,tray
CastShadow=false
Frozen=false
Id=TopPanel
Layer=0
Length=90
Offset=10
Position=0
Screen=-1
Size=26
Struts=true
Visible=true

[Uberbar]
Applets=pager
CastShadow=false
Frozen=false
Id=Uberbar
Layer=0
Length=10
Offset=0
Position=0
Screen=-1
Size=26
Struts=true
Visible=true

[TrashCan]
Mode=1
Type=Trash

[Volume]
Channel=Master
MixerCommand=konsole -e alsamixer
Step=3
Type=Volume

[dolphin]
Exec=dolphin
Icon=dolphin
Label=Dolphin
Mode=1
Type=Button

[monitor]
Exec=ksysguard
Icon=ksysguard
Mode=1
Type=Button

[firefox]
Exec=firefox
Icon=firefox
Label=Firefox
Mode=1
Type=Button

[kate]
Exec=kate
Icon=kate
Label=Kate
Mode=1
Type=Button

[kmail]
Exec=kmail
Icon=kmail
Label=Kmail
Mode=1
Type=Button

[konsole]
Exec=konsole
Icon=konsole
Label=Konsole
Mode=1
Type=Button

[ktorrent]
Exec=ktorrent
Icon=ktorrent
Label=Ktorrent
Mode=1
Type=Button

[steam]
Exec=steam
Icon=steam
Label=Steam
Mode=1
Type=Button

[mail]
Active=true
Exec=$HOME/.kde4/share/apps/be.shell/Scripts/applet mail
PermittedCommands=konsole -e mutt,kmail
PollInterval=1000
Type=Label

[mediatray]
Icon=media-eject
Type=MediaTray

[mpc]
Active=true
Exec=$HOME/.kde4/share/apps/be.shell/Scripts/applet mpc
PermittedCommands=mpc toggle,konsole -e ncmpcpp
PollInterval=1000
Type=Label

[net]
Exec=$HOME/.kde4/share/apps/be.shell/Scripts/applet net
PollInterval=1000
Type=Label

[spacer]
Type=Stretch

[tasks]
AlwaysGroup=true
ButtonMode=1
Buttons=dolphin,firefox,konsole,kate,ktorrent,kmail,vlc,steam
OnlyCurrentDesk=false
OnlyCurrentScreen=false
OnlyMinimized=false
Spacing=10
Type=TaskBar

[tray]
FallbackIcons=Applet NetworkManager,kmix,ktorrent,wicd-client.py
IconSize=20
NastyIcons=Fcitx Tray Window,klipper,knotes,korgac,wicd-client.py
Spacing=2
Type=Systray

[upico]
Active=true
Exec=$HOME/.kde4/share/apps/be.shell/Scripts/applet up
PermittedCommands=konsole -e yaourt -Syyua --ignore linux-ck --ignore linux-ck-headers
PollInterval=100000
Type=Label

[vlc]
Exec=vlc
Icon=vlc
Label=Vlc
Mode=1
Type=Button

[wifi]
Exec=$HOME/.kde4/share/apps/be.shell/Scripts/applet wifi
PollInterval=1000
Type=Label
